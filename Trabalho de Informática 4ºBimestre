i = 0
while i!=5:
     print ("1-Cadastrar")
     print ("2-Ler")
     print ("3-Deletar")
     print ("4-Atualizar")
     print ("5-Sair")
     i = int(input("Qual das opções acima:"))
     if i == 1:
         nome = str(input ("Digite seu nome : "))
         cel = int(input("Digite seu número de telefone : "))
         cpf = int(input("Digite seu cpf : "))
         idade = int(input("Digite sua idade : "))
         email = input("Digite seu email : ")
     elif i==2:
         print (nome)
         print (cel)
         print (cpf)
         print (idade)
         print (email)
     elif i==3:
        print ("Deseja excluir seus dados ?")
        print ("1-Sim")
        print ("2-Não")
        o=int(input("Escolha a opção : "))
        if o==1:
            print ("Seus Dados foram excluidos")
            print ("Por favor preencha os campos para realizar o seu novo cadastro.")
            nome = str(input ("Digite seu nome : "))
            cel = int(input("Digite seu número de telefone : "))
            cpf = int(input("Digite seu cpf : "))
            idade = int(input("Digite sua idade : "))
            email = input("Digite seu email : ")
        elif o==2:
            print ("Seu cadastro não foi deletado.")
     elif i==4:
        print ("Qual seção você deseja atualizar ? ")   
        print ("1-Nome")   
        print ("2-Celular")  
        print ("3-CPF")
        print ("4-Idade")
        print ("5-Email")
        e = int (input("Escolha uma das opções : "))
        if e==1:
                nomenv= str(input("Digite seu nome novamente : "))
        elif e==2:
               celnv= int(input("Digite seu novo número de telefone : "))
        elif e==3:
               cpfnv = int(input("Digite seu novo CPF : "))
        elif e==4:
               idadenv = int(input("Digite sua idade : "))
        elif e==5:
               emailnv = input("Digite seu novo email : ")
        elif i==5:
            print ("Você saiu do cadastro")
